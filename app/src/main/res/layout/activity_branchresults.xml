<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E67451"
    tools:context=".branchresults">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/parent1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:cardElevation="11dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:splitMotionEvents="true"
        android:elevation="11dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="#55B9C6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regular Examination"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Semester Examination Results"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginLeft="60dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Select the regulation"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/regulation"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:scrollbars="vertical"
            android:layout_marginTop="200dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:text="Select the Branch"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:textStyle="normal" />

        <Spinner
            android:id="@+id/branch"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="260dp" />

        <Button
            android:id="@+id/resultssubmitbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="330dp"
            android:text="submit"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/backtohome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="330dp"
            android:text="Back"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
