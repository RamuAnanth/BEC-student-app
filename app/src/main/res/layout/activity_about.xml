<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/developerback"
    android:scrollbars="vertical"
    tools:context=".about">
  <com.airbnb.lottie.LottieAnimationView
      android:id="@+id/backanimationbutton"
      android:layout_width="50dp"
      android:layout_height="50dp"
      android:layout_marginLeft="0dp"
      android:layout_marginTop="0dp"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/backbuttonanimation" />

  <com.airbnb.lottie.LottieAnimationView
      android:layout_width="118dp"
      android:layout_height="228dp"
      android:layout_marginLeft="0dp"
      android:layout_marginTop="0dp"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/helloanimation" />

  <androidx.cardview.widget.CardView
      android:layout_width="193dp"
      android:layout_height="188dp"
      android:layout_marginLeft="200dp"
      android:layout_marginTop="50dp"
      app:cardBackgroundColor="#8FEAE7"
      app:cardCornerRadius="95dp"
      android:elevation="11dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/developer" />
  </androidx.cardview.widget.CardView>

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="180dp"
      android:layout_marginLeft="60dp"
      android:text="It's me Ramu"
      android:textAlignment="center"
      android:textColor="#06148E"
      android:textSize="25dp"
      android:textStyle="italic" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="270dp"
      android:text="I am the developer of this app specifically designed for the students of BEC College. This app is a comprehensive tool that helps students manage their academic progress more efficiently. With features that allow you to calculate internal marks, track attendance, and view semester results, this app aims to streamline essential academic tasks. By providing real-time updates on your attendance and performance in assignments and quizzes, you can stay on top of your studies and ensure you meet all the necessary requirements. I created this app to enhance the academic experience for all BEC College students, making it easier to stay organized and informed throughout your educational journey."
      android:textAlignment="center"
      android:textColor="#000000"
      android:textSize="17sp"
      android:textStyle="italic" />
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="620dp"
    app:cardCornerRadius="11dp"
    android:elevation="11dp"
    app:cardElevation="11dp"
    app:cardBackgroundColor="#3AADBC"
    >
  <RelativeLayout
      android:id="@+id/relativeLayout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="#66E6F6">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="130dp"
        android:layout_height="239dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
         app:lottie_rawRes="@raw/followanimation"/>

    <ImageView
        android:id="@+id/instaid"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/insta" />

    <ImageView
        android:id="@+id/youtubeid"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="90dp"
        app:srcCompat="@drawable/youtube" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:text="© 2023-2024 Address: Bapatla Engineering College,Bapatla– 522102"
        android:textColor="@color/black"
        android:textSize="20sp" />
  </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>
