<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/supportback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".supportpage">
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/backbuttonanimationsupport"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:lottie_autoPlay="true"
        android:elevation="11dp"
        android:background="#2B2953"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/backbuttonanimation" />
    <TextView
        android:text="Support Page"
        android:textColor="#fff"
        android:textSize="34sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:text="Hi, I'm Ramu, the developer of this app. If you encounter any errors, issues, or have suggestions for improvements, please don't hesitate to reach out. You can contact me via email click on the Email image at bottom."
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textColor="#fff"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.How to use app?\nOn the starting page or home page, there is a menu button click on it.It shows dropdown list with various options. Please choose what you need. The app is currently under development, and more options will be added soon."
        android:textColor="#fff"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="300dp"
        />
    <TextView
        android:text="Thank you for using our app. We are committed to providing the best experience possible ."
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="23sp"
        android:textColor="#fff"
        android:layout_marginTop="525dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</RelativeLayout>