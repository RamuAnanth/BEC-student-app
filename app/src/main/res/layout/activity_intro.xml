<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marksbackground"
    tools:context=".Intro">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="20dp"
        android:text="Bapatla Engineering college,Bapatla"
        android:textAlignment="center"
        android:textColor="#024275"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Internal Calculator"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textColor="#D11E11"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="100dp"
        android:text="AAT-1 Marks:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000305"
        />
    <EditText
        android:id="@+id/aat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="90dp"
        android:inputType="number"
        android:hint="Enter AAT-1 Marks"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mid-1 Marks:"
        android:textSize="20sp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/mid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="140dp"
        android:inputType="number"
        android:hint="Enter Mid-1 Marks"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="200dp"
        android:text="AAT-2 Marks:"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000305"
        />
    <EditText
        android:id="@+id/aat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="190dp"
        android:inputType="number"
        android:hint="Enter AAT-2 Marks"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mid-2 Marks:"
        android:textSize="20sp"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/mid2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="240dp"
        android:inputType="number"
        android:hint="Enter Mid-2 Marks"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="330dp"
        android:textSize="17sp"
        android:text="Submit"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black" />
    <Button
        android:id="@+id/backmovebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="330dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Back"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/results"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="380dp"
        android:text=""
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/status"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text=""
        android:layout_marginTop="430dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="30sp"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_height="84dp"
        app:srcCompat="@drawable/bec" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="500dp"
        app:cardCornerRadius="11dp"
        app:cardBackgroundColor="#E085EF"
        app:cardElevation="11dp">

        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Note:\n1. The first field is used to enter the AAT-1 Marks.\n2. The second field is used to enter the Mid-1 Marks.\n3. The third field is used to enter the AAT-2 Marks.\n4.The second field is used to enter the Mid-2 Marks.\n5.AAT marks range in between 0 to 10\n6.Mid marks range in between 0 to 35.\n7.If you are not entered any field that will be Consided as 0"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>